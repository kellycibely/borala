<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="#ffffff"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kelly.borala.main">

    <TextView
        android:id="@+id/nova_viagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:gravity="center"
        android:drawableTop="@drawable/nova_viagem"
        android:onClick="novaViagem"
        android:text="Nova viagem"
        android:textColor="#b03060"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/minhas_viagens"
        android:layout_toStartOf="@+id/minhas_viagens"
        android:layout_marginTop="59dp" />

    <TextView
        android:id="@+id/novo_gasto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:gravity="center"
        android:drawableTop="@drawable/novo_gasto"
        android:onClick="novoGasto"
        android:text="Novo gasto"
        android:textColor="#b03060"
        android:layout_alignTop="@+id/nova_viagem"
        android:layout_toRightOf="@+id/minhas_viagens"
        android:layout_toEndOf="@+id/minhas_viagens" />

    <TextView
        android:id="@+id/minhas_viagens"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:gravity="center"
        android:drawableTop="@drawable/minhas_viagens"
        android:onClick="minhasViagens"
        android:text="Minhas viagens"
        android:textColor="#b03060"
        android:layout_below="@+id/novo_gasto"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp" />

</RelativeLayout>
