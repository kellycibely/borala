<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">


    <ImageView
        android:layout_width= "60dp"
        android:layout_height="wrap_content"
        android:id="@+id/imagemTipoViagem"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/dataViagem" />

    <TextView
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/localViagem"
        android:textSize="20dp"
        android:textColor="#060000"
        android:layout_alignTop="@+id/imagemTipoViagem"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/imagemTipoViagem"
        android:layout_toEndOf="@+id/imagemTipoViagem" />

    <TextView
        android:gravity="center"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/dataViagem"
        android:layout_marginTop="87dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/totalGastos"
        android:layout_alignEnd="@+id/totalGastos"
        android:layout_toRightOf="@+id/imagemTipoViagem"
        android:layout_toEndOf="@+id/imagemTipoViagem" />

    <TextView
        android:gravity="center"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/totalGastos"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/localViagem"
        android:layout_alignEnd="@+id/localViagem"
        android:layout_toEndOf="@+id/imagemTipoViagem"
        android:layout_toRightOf="@+id/imagemTipoViagem" />

</RelativeLayout>